{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": false,
        "baseUrl": ".",
        "lib": [
            "ES5", 
            "ES6",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ES2021",
            "ES2022"
        ],
        "module": "ES2020",
        "moduleResolution": "node",
        "newLine": "lf",
        "removeComments": true,
        "sourceMap": false,
        "target": "ES2020",
        "types": [
            "./node_modules/@types/node",
            "./src/types/ratsass"
        ]
    },
    "exclude": [
        "./rollup.config.js",
        "./dist",
        "./tests"
    ]
}
